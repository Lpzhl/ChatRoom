<AnchorPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="controller.CommonPhrasesController">
    <children>
        <ListView fx:id="phrasesList" layoutX="14.0" layoutY="14.0" prefHeight="245.0" prefWidth="300.0" AnchorPane.bottomAnchor="105.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" AnchorPane.topAnchor="14.0" />
        <TextField fx:id="phraseInput" layoutX="14.0" layoutY="269.0" prefWidth="300.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0" />
        <HBox alignment="CENTER" layoutX="14.0" layoutY="328.0" spacing="10.0" AnchorPane.bottomAnchor="14.0" AnchorPane.leftAnchor="14.0" AnchorPane.rightAnchor="14.0">
            <children>
                <Button fx:id="addPhraseButton" mnemonicParsing="false" onAction="#handleAddPhrase" text="添加" />
                <Button fx:id="editPhraseButton" mnemonicParsing="false" onAction="#handleEditPhrase" text="编辑" />
                <Button fx:id="deletePhraseButton" mnemonicParsing="false" onAction="#handleDeletePhrase" text="删除" />
            </children>
        </HBox>
    </children>
